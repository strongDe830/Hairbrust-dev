{% style %}

@media(max-width: 749px) {
 .block-{{ block.id }} {
    opacity: {{ block.settings.opacity_value }};
  }
}
 
{% endstyle %}
<div class="block-progress block-{{ block.id }}">
    <img
        class="progress-icon"
        src="{{- block.settings.progress_icon  | image_url: width: 50 -}}"
        alt="{{- image_alt -}}"
        loading="lazy"
    >
    <div class="timeline-dots"></div>
</div>

{% schema %}
{
  "name": "t:blocks.progress.name",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "progress_icon",
      "label": "Progress Icon"
    },
    {
      "type": "range",
      "id": "opacity_value",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Content opacity",
      "default": 1
    }
  
  ],
  "presets": [{ "name": "t:blocks.progress.name" }]
}
{% endschema %}