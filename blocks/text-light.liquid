<div id="shopify-block-{{- block.id -}}" class="block-text-light c-rte">
  <p>
    {{ block.settings.text }}
  </p>
</div>

{%- if block.settings.margin_bottom > 0 -%}
  <style>
    #shopify-block-{{- block.id -}} {
      margin-bottom: {{ block.settings.margin_bottom | divided_by: 16.0 | round: 3 | remove: '.0' -}}rem;
    }
  </style>
{%- endif -%}

{%- if block.settings.text_align != 'start' -%}
  <style>
    #shopify-block-{{- block.id -}} {
        text-align: {{ block.settings.text_align }};
      {%- if block.settings.text_align == 'center' -%}
        margin-inline: auto;
      {%- endif -%}
      {%- if block.settings.text_align == 'end' -%}
        margin-left: auto;
      {%- endif -%}
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "t:blocks.text_light.name",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "t:sections.all.text.label"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "t:sections.all.text_align.label",
      "options": [
        {
          "value": "start",
          "label": "t:sections.all.justify_content.options.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.justify_content.options.centre.label"
        },
        {
          "value": "end",
          "label": "t:sections.all.justify_content.options.right.label"
        }
      ],
      "default": "start"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 40,
      "step": 1,
      "default": 24,
      "label": "t:sections.all.margin_bottom.label"
    }
  ],
  "presets": [{ "name": "t:blocks.text_light.name" }]
}
{% endschema %}