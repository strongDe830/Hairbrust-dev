{%- liquid
  assign template_name = 'section-featured-products'

  assign heading = section.settings.heading
  assign heading_size = 'sm'
  if section.blocks > 1
    assign heading_size = 'md'
  endif
  assign support_widget = section.settings.support_widget
  assign use_add_to_cart_btn = section.settings.use_add_to_cart_btn
  assign margin_bottom = section.settings.margin_bottom

  render 'file-css', _name: 'section-featured-products.css', _load_type: 'defer'
  render 'file-js', _name: 'section-featured-products.js', _load_type: 'defer'
  render 'file-js', _name: 'tabs.js', _load_type: 'defer'
%}

<div
  class="{{- template_name }}  u-space-below-{{- margin_bottom }}"
  data-section-type="{{- template_name -}}"
  data-section-id="{{ section.id }}"
>
  <featured-products>
    <div class="container" data-fp-container>
      {%- if heading != blank -%}
        <h2 class="u-heading-{{- heading_size }} heading">{{- heading -}}</h2>
      {%- endif -%}
      {%- if section.blocks.size > 1 %}
        <spark-tabs class="tabs">
          <div class="tablist-wrapper">
            <div role="tablist" aria-label="Tab Menu">
              {%- for block in section.blocks -%}
                {% liquid
                  assign collection = block.settings.collection
                  assign heading = block.settings.heading | default: collection.title
                %}
                <button
                  class="c-btn"
                  aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                  aria-controls="tab-{{- block.id -}}"
                  tabindex="{% if forloop.first %}0{% else %}-1{% endif %}"
                  role="tab"
                >
                  {{- heading -}}
                </button>
              {%- endfor -%}
            </div>
          </div>
      {%- endif -%}
      <div class="wrapper">
        {%- for block in section.blocks -%}
          {% liquid
            assign collection = block.settings.collection
            assign product_list = block.settings.product_list
            assign product_feed = block.settings.product_feed
            assign heading = block.settings.heading | default: collection.title
            if product_feed == 'collection' and collection != blank
              assign featured_products = collection.products
            elsif product_feed == 'product-list' and product_list != blank
              assign featured_products = product_list
            endif
          %}
          {%- capture swiper -%}
            <div class="swiper" data-fp-slider  {{ block.shopify_attributes }}>
              <div class="swiper-wrapper">
                {%- for product in featured_products limit: 12 -%}
                  {%- if block.settings.show_variants -%}
                    {%- for variant in product.variants -%}
                      <div class="swiper-slide">
                        {%- render 'card-variant', _variant: variant, _use_add_to_cart_btn: use_add_to_cart_btn -%}
                      </div>
                    {%- endfor -%}
                  {%- else -%}
                    <div class="swiper-slide">
                      {%- render 'card-product', _product: product, _use_add_to_cart_btn: use_add_to_cart_btn -%}
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
              <div class="swiper-controls">
                <div class="swiper-btns">
                  <button class="swiper-btn c-btn" aria-label="{{- 'components.swiper.previous' | t -}}" data-fp-slider-prev>
                    {%- render 'element-icon', _icon: 'arrow-left' -%}
                  </button>
                  <button class="swiper-btn c-btn" aria-label="{{- 'components.swiper.next' | t -}}"  data-fp-slider-next>
                    {%- render 'element-icon', _icon: 'arrow-right' -%}
                  </button>
                </div>
              </div>
            </div>
          {%- endcapture -%}
          {%- if section.blocks.size > 1 -%}
            <div
              id="tab-{{- block.id -}}"
              class="tab-content"
              role="tabpanel"
              tabindex="0"
              aria-labelledby="tab-{{- block.id -}}"
              {% unless forloop.first -%}
                hidden
              {%- endunless %}
            >
              {{- swiper -}}
              {% liquid
                if product_feed == 'collection' and collection != blank
                  render 'anchor', _anchor_url: collection.url, _anchor_text: 'Shop Now', _anchor_style: 'tuna'
                endif
              %}
            </div>
          {%- else -%}
            {{- swiper -}}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- if section.blocks.size > 1 %}
        </spark-tabs>
      {%- endif -%}
    </div>
  </featured-products>
</div>

{% schema %}
{
  "name": "t:sections.featured_products.name",
  "tag": "section",
  "class": "overflow-hidden",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.header_content.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.header_settings.content"
    },
    {
      "type": "checkbox",
      "id": "use_add_to_cart_btn",
      "label": "t:sections.all.use_add_to_cart_btn.label",
      "default": false
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "label": "t:sections.all.spacing.margin_bottom.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.spacing.option_none.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.spacing.option_extra_small.label"
        },
        {
          "value": "sm",
          "label": "t:sections.all.spacing.option_small.label"
        },
        {
          "value": "md",
          "label": "t:sections.all.spacing.option_medium.label"
        },
        {
          "value": "lg",
          "label": "t:sections.all.spacing.option_large.label"
        }
      ],
      "default": "md"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "t:sections.featured_products.blocks.block.name",
      "settings": [
        {
          "type": "header",
          "content": "t:sections.all.header_content.content"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.all.collection.label"
        },
        {
          "type": "product_list",
          "id": "product_list",
          "label": "t:sections.all.product_list.label",
          "info": "t:sections.all.product_list.info"
        },
        {
          "type": "select",
          "id": "product_feed",
          "label": "t:sections.all.product_feed.label",
          "options": [
            {
              "value": "collection",
              "label": "t:sections.all.product_feed.options.collection.label"
            },
            {
              "value": "product-list",
              "label": "t:sections.all.product_feed.options.product_list.label"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "show_variants",
          "label": "t:sections.all.show_variants.label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.all.heading.label",
          "info": "t:sections.featured_products.blocks.block.settings.heading.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_products.name",
      "category": "Content"
    }
  ]
}
{% endschema %}
