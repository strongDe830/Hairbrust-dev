{%- liquid
  assign template_name = 'section-page-hero-full-width'

  assign margin_bottom = section.settings.margin_bottom

  render 'file-css', _name: 'section-page-hero-full-width.css'
%}

<div
  class="{{- template_name }} u-space-below-{{- margin_bottom }}"
  data-section-type="{{- template_name -}}"
  data-section-id="{{ section.id }}"
>
  <div class="container">
    <div class="block-container {{ section.settings.content_position | replace: '_', '-' }}">
      {% content_for 'block', type: 'group-content', id: 'static-group-content' %}
    </div>
    
    <div class="section-media">
      {% content_for 'block', type: 'media', id: 'static-media' %}
      {% content_for 'block', type: 'badge', id: 'static-badge' %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page_hero_full_width.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.header_settings.content"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "t:sections.all.position.label",
      "options": [
        {
          "value": "top_left",
          "label": "t:sections.all.position.option_none.top_left.label"
        },
        {
          "value": "top_center",
          "label": "t:sections.all.position.option_none.top_center.label"
        },
        {
          "value": "top_right",
          "label": "t:sections.all.position.option_none.top_right.label"
        },
        {
          "value": "middle_left",
          "label": "t:sections.all.position.option_none.middle_left.label"
        },
        {
          "value": "middle_center",
          "label": "t:sections.all.position.option_none.middle_center.label"
        },
        {
          "value": "middle_right",
          "label": "t:sections.all.position.option_none.middle_right.label"
        },
        {
          "value": "bottom_left",
          "label": "t:sections.all.position.option_none.bottom_left.label"
        },
        {
          "value": "bottom_center",
          "label": "t:sections.all.position.option_none.bottom_center.label"
        },
        {
          "value": "bottom_right",
          "label": "t:sections.all.position.option_none.bottom_right.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "label": "t:sections.all.spacing.margin_bottom.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.spacing.option_none.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.spacing.option_extra_small.label"
        },
        {
          "value": "sm",
          "label": "t:sections.all.spacing.option_small.label"
        },
        {
          "value": "md",
          "label": "t:sections.all.spacing.option_medium.label"
        },
        {
          "value": "lg",
          "label": "t:sections.all.spacing.option_large.label"
        }
      ],
      "default": "md"
    }
  ],
  "blocks": [{ "type": "group-content" }, { "type": "media" }, { "type": "badge" }],
  "presets": [
    {
      "name": "t:sections.page_hero_full_width.name"
    }
  ]
}
{% endschema %}
