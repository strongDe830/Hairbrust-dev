{%- liquid
  assign template_name = 'section-main-blog'

  assign description = blog.metafields.custom.description
  assign margin_bottom = section.settings.margin_bottom

  render 'file-css', _name: 'section-main-blog.css', _load_type: 'defer'
  render 'file-css', _name: 'snippet-card-article.css', _load_type: 'defer'
%}

<div
  class="{{- template_name }} u-space-below-{{- margin_bottom }}"
  data-section-type="{{- template_name -}}"
  data-section-id="{{ section.id }}"
>
  <div class="container">
    <header class="header">
      <h1 class="u-heading-lg centre">{{- blog.title -}}</h1>
      {%- if description != blank -%}
        <div class="c-rte">{{- description | metafield_tag -}}</div>
      {%- endif -%}
    </header>
    {%- paginate blog.articles by 12 -%}
      {%- if section.settings.use_filters == true -%}
        {%- render 'layout-blog-filters', blog: blog -%}
      {%- endif -%}
      <div class="grid">
        {%- for article in blog.articles -%}
          {%- render 'card-article', _article: article -%}
        {%- endfor -%}
      </div>
      {%- if paginate.pages > 1 -%}
        {%- render 'layout-pagination', _paginate: paginate -%}
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main_blog.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.header_settings.content"
    },
    {
      "type": "checkbox",
      "id": "use_filters",
      "label": "t:sections.main_blog.settings.use_filters.label",
      "default": true
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "label": "t:sections.all.spacing.margin_bottom.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.spacing.option_none.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.spacing.option_extra_small.label"
        },
        {
          "value": "sm",
          "label": "t:sections.all.spacing.option_small.label"
        },
        {
          "value": "md",
          "label": "t:sections.all.spacing.option_medium.label"
        },
        {
          "value": "lg",
          "label": "t:sections.all.spacing.option_large.label"
        }
      ],
      "default": "md"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "t:sections.main_blog.name"
    }
  ]
}
{% endschema %}
